<!DOCTYPE html>
<html>
<head>
  <title>Changetheworld</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="account">
  <div id="heading">
    <% if current_user %>
      <p id="login"><%= current_user.email %>  |  <%= link_to "Log out", '/logout', method: 'delete' %></p>
  <% else %>
    <ul>
      <p id="login"><%= link_to "Login", 'login' %>  |  <%= link_to "Signup", 'signup' %></p>
    </ul>
  <% end %>
  </div>

<%= yield %>

</body>
</html>
