<%= form_for([locals[:story], @commentary]) do |f| %>

  <div class="field">
    <%=f.hidden_field :story_id, :value => locals[:story].id %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
