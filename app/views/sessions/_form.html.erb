<div class="login_form">
  <h2>Login</h2>
  <%= form_tag(login_path) do %>
    <%= label_tag :username %><br>
    <%= text_field_tag :username %><br>

    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br>

    <%= submit_tag 'Log in', class: "login-button", id: "login-trigger" %>
  <% end %>
</div>
