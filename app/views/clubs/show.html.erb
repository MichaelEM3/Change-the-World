<% if current_user && current_user.user_in_club(@club.id) && current_user.user_admin_in_club?(@club.id) %>
  <h3>New Story</h3>
  <div id='creatorfeed'>
    <%= flash[:error] unless flash[:error].blank? %>
    <%= render 'stories/form'%>
  </div>
<%end%>


    <h2>Current Members:</h2>
    <ul>
      <% @club.user_clubs.each do |userclub| %>
        <% if userclub.user.avatar? %>
          <%= link_to image_tag(userclub.user.avatar(:thumb)), profile_path(userclub.user_id) %>
        <% else %>
          <%= link_to image_tag("http://orig05.deviantart.net/c4a0/f/2013/036/5/d/marioquestionbox_by_camdencc-d5ty7xb.gif"), profile_path(userclub.user_id) %>
        <% end %>
      <% end %>
    </ul>

    <p>Tags:
      <%= @club.thumbtag %></p>


    <% if current_user && @club.users.exists?(current_user) %>
    <%= button_to "Leave Club", unjoin_club_path(@club) unless current_user.user_admin_in_club?(@club.id)%>
    <% else %>
    <%= button_to "Join Club", join_club_path(@club) %>
    <% end %>
    <%= link_to 'Back', clubs_path %>

    <br>

    <%= link_to 'Create New Project', new_club_project_path(@club) if current_user && current_user.user_in_club(@club.id) && current_user.user_admin_in_club?(@club.id) %><br>
    <%= link_to 'View Current Projects', club_projects_path(@club) if current_user && current_user.user_in_club(@club.id)%>
