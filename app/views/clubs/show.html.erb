<h2><%= @club.title %></h2>
<p><%= @club.description %></p>
<p>Location: <%= @club.location %></p>


<p><%= image_tag @club.image(:large) %></p>

<div>
    <p><%= link_to 'Edit', edit_club_path(@club) if current_user && current_user.user_in_club(@club.id) && current_user.user_admin_in_club?(@club.id) %></p>
    <p><%= link_to 'Destroy', @club, method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user.user_in_club(@club.id) && current_user.user_admin_in_club?(@club.id) %></p>
</div>

<%@stories.each_with_index do |story, index| %>
  <h3><%= story.title %></h3>
  <p><%= story.story%></p>

  <% if current_user && current_user.user_in_club(@club.id) %>
    <h4>Leave a comment:</h4>
      <%= flash[:error] unless flash[:error].blank? %>
      <p><% story.commentaries.each do |com| %>
          <%= com.comment %><br>
          Posted by: <%= com.user.username %><br>
          <%= time_ago_in_words(com.created_at) %>
          <% end %></p>
      <%= render 'commentaries/form', locals: {story: story} %>
      <hr>
  <% end %>

<%end%>
<%= paginate @stories%>
