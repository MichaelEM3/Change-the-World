<div>

  <p><%= link_to 'Edit', edit_club_path(@club)  if  current_user.user_in_club(@club.id) && current_user.user_admin_in_club?(@club.id) %></p>
  <p><%= link_to 'Destroy', @club, method: :delete, data: { confirm: 'Are you sure?' } if current_user.user_in_club(@club.id) && current_user.user_admin_in_club?(@club.id) %></p>

</div>

<p><%= @club.title %></p>
<p><%= @club.description %></p>
<p><%= @club.location %></p>


<p><%= image_tag @club.image(:large) %></p>

<!-- @club.tags.each do |tag|
Tags:
 tag.name
 end  -->

<% @club.stories.each do |stor| %>
  <h4><%= stor.title %></h4>
  <p><%= stor.story%></p>
  <% if current_user.user_in_club(@club.id) %>
    <h3>Leave a comment:</h3>
      <%= flash[:error] unless flash[:error].blank? %>
      <p><% stor.commentaries.each do |com| %>
          <%= com.comment %><br>
          <% end %></p>
      <%= render 'commentaries/form', locals: {story: stor} %>

  <% end %>

<%end%>

<% if current_user.user_in_club(@club.id) && current_user.user_admin_in_club?(@club.id) %>
  <h3>New Story</h3>
  <div id='creatorfeed'>
    <%= flash[:error] unless flash[:error].blank? %>
    <%= render 'stories/form'%>
  </div>
<%end%>


    <h2>Current Members:</h2>
    <ul>
      <% @club.user_clubs.each do |userclub| %>
      <li><%= userclub.user.username %></li>
      <% end %>
    </ul>

    <p>Tags:
      <%= @club.thumbtag %></p>


    <% if current_user && @club.users.exists?(current_user) %>
    <%= button_to "Leave Club", unjoin_club_path(@club) unless current_user.user_admin_in_club?(@club.id)%>
    <% else %>
    <%= button_to "Join Club", join_club_path(@club) %>
    <% end %>
    <%= link_to 'Back', clubs_path %>
