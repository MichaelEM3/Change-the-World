<%= link_to 'Profile', user_path(:id) %>

<%= form_tag(clubs_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "Search Clubs" %>
	<%= submit_tag "Search" %>
		<% if @club.present? %>
		<br>
			<p> The following are your related articles</p>
		<% else %>
			<p>There are no club containing the term(s) <%= params[:search] %>.</p>
		<% end %>
<% end %>

<div> 
<p>Your tags:
<% @club.each do |club| %>
<%= club.thumbtag %></p>
<% end %>
<hr>
</div>

<div class= 'club body'>
	<% @club.each do |club| %>
	<div class="club">
		<p><%= club.title %></p> 
		<p><%= club.location %></p>
		<p><%= club.description %></p>
		<p><%= club.thumbtag %></p>
		<p><%= link_to 'Show Me More', club %></p>
	</div>
	<% end %>

<div class="activities">
	<h1>Activity Feed</h1>
	<% @activities.each do |activity| %>
		<div class="activity">
			<p><b>
				<%= activity.trackable.title %>
			</b></p>
			<p>
				<%=h truncate(activity.trackable.story, :length => 10) %>
			</p>
			<%= link_to activity.owner.name, activity.owner if activity.owner %>
		</div>
	<% end %>
</div>


